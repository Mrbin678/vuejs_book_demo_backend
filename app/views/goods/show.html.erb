<%= content_for :locbar do %>
  商品
  &raquo;
  商品详情
<% end %>

<dl class="dl-horizontal">
  <dt><strong>商品名称:</strong></dt>
  <dd><%= @good.name %></dd>
  <dt><strong>商品描述:</strong></dt>
  <dd><%= @good.description %></dd>
  <dt><strong>商品单价:</strong></dt>
  <td><%= @good.price %>元</td>
  <dt><strong>图片:</strong></dt>
  <dd><%= image_tag @good.image_url %></dd>
</dl>

<%= link_to "编辑", edit_good_path(@good), :class => 'btn btn-primary' %>
<%= link_to "返回", goods_path, :class => 'btn btn-default'  %>
